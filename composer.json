{
    "name": "karyalay/portal-system",
    "description": "SellerPortal System - A comprehensive web application with public site, customer portal, and admin panel",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6.8",
        "razorpay/razorpay": "^2.9"
    },
    "suggest": {
        "sentry/sentry": "^3.0 - For error tracking and monitoring"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "giorgiosironi/eris": "^0.14",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Karyalay\\": "classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Karyalay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:property": "phpunit --testsuite Property",
        "cs:check": "phpcs --standard=PSR12 classes/ public/",
        "cs:fix": "phpcbf --standard=PSR12 classes/ public/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
