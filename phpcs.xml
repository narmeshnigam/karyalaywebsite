<?xml version="1.0"?>
<ruleset name="Karyalay Coding Standard">
    <description>SellerPortal System coding standard based on PSR-12</description>
    
    <!-- Use PSR-12 as the base standard -->
    <rule ref="PSR12"/>
    
    <!-- Paths to check -->
    <file>classes</file>
    <file>public</file>
    <file>includes</file>
    
    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors in output -->
    <arg name="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>
